<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.number_field :price_in_cents %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
